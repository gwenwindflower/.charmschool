[init]
  defaultBranch = main

[include]
  path = ~/.config/delta/catppuccin.gitconfig

[core]
  pager = delta
  excludesfile = ~/.gitignore_global

[delta]
  line-numbers = true
  navigate = true
  hyperlinks = true
  features = catppuccin-frappe


[color]
  ui = auto

[color "branch"]
  current = reverse bold cyan
  local = bold "#ca9ee6"
  remote = ul "#ef9f76"
  upstream = bold green
  plain = blue

[color "decorate"]
	branch = bold "#ca9ee6"
	remoteBranch = ul "#ef9f76"
	tag = reverse green
	stash = bold yellow
  HEAD = reverse bold cyan

[color "log"]
  commit = green
  hash = green

[color "status"]
  ; staged/added files
  added = bold green
  updated = bold green
  ; modified but unstaged
  changed = bold "#ca9ee6"
  ; deleted files
  deleted = bold red
  ; untracked files
  untracked = bold "#85c1dc"
  ; branch info
  branch = reverse bold cyan
  ; other status elements
  nobranch = reverse bold red
  unmerged = reverse bold yellow

[log]
	graphColors = green, "#ca9ee6", "#ef9f76", blue, yellow, "#babbf1", magenta, cyan, "#ea999c"

[pretty]
	catppuccin-frappe = format:%C(magenta)%ad%C(reset) %s %C(green)%h%C(reset) %C(blue)(%an)%C(reset) %C(auto)%d
  datecomp = format:%h %G? %ad %cd %s
[alias]
  ; personal log recipes that are pretty :)
	graph = log --graph --pretty=catppuccin-frappe --date=human --all
	r5 = log --graph --pretty=catppuccin-frappe --date=human -5
	r10 = log --graph --pretty=catppuccin-frappe --date=human -10
	r25 = log --graph --pretty=catppuccin-frappe --date=human -25
  diary = log --pretty=catppuccin-frappe --date=human
  my-diary = log --pretty=catppuccin-frappe --date=human --author "winnie"
  ; for comparing author date and committer date, in case of rebase or amend divergence
  datecomp = log --pretty=datecomp --date=short
  ; concise status with branch info
  s = status -sb
  ; easy semantic names
  unstage = restore --staged
  unstage-all = restore --staged .
  ; quick forgit access as i use these constantly
  ; these are also aliased in my shell config, but
  ; sometimes i type git first out of habit
  fga = forgit add
  fglo = forgit log
  fgd = forgit diff
  fgi = forgit ignore
  fgbl = forgit blame
  fgrb = forgit rebase
  fgbd = forgit branch_delete
  fgcb = forgit checkout_branch
  fgct = forgit checkout_tag
  fgcf = forgit checkout_file
  fgcc = forgit checkout_commit
  fgrc = forgit revert_commit
  fgcl = forgit clean
  fgrh = forgit reset_head
  fgss = forgit stash_show
  fgsp = forgit stash_push
  fgcp = forgit cherry_pick
  fgcpb = forgit cherry_pick_branch
